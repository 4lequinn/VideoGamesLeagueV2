<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ControladorUsuario</servlet-name>
        <servlet-class>controlador.ControladorUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorLiga</servlet-name>
        <servlet-class>controlador.ControladorLiga</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorEquipo</servlet-name>
        <servlet-class>controlador.ControladorEquipo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorAdmin</servlet-name>
        <servlet-class>controlador.ControladorAdmin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControladorUsuario</servlet-name>
        <url-pattern>/ControladorUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorLiga</servlet-name>
        <url-pattern>/ControladorLiga</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorEquipo</servlet-name>
        <url-pattern>/ControladorEquipo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorAdmin</servlet-name>
        <url-pattern>/ControladorAdmin</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>./index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
